<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="CPU Usage:" FontSize="16"/>
            <ProgressBar Name="CpuProgressBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock Name="CpuUsageTextBlock" FontSize="16" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Memory Usage:" FontSize="16"/>
            <ProgressBar Name="MemoryProgressBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock Name="MemoryUsageTextBlock" FontSize="16" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Disk Usage:" FontSize="16"/>
            <ProgressBar Name="DiskProgressBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock Name="DiskUsageTextBlock" FontSize="16" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
